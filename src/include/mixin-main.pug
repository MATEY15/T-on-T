mixin care(link, imgSrc, desc)
	a(href= link).care
		span.care-img
			img(src= imgSrc, alt= desc)
		p 
			=desc
			br
			| care

mixin heading(desc, names, text)
	.heading-main
		span.head-line--desc= desc
		h2= names
		p= text

mixin headingLeft(names, text)
	.heading-main.heading-main--left
		h2= names
		p= text

mixin headingRepeat(desc, names, text)
	.heading-main.heading-offset
		span.head-line--desc= desc
		h2= names
		p= text

mixin headingSmall(desc, names, text)
	.heading-main.heading-small
		span.head-line--desc= desc
		h2= names
		p= text

mixin headingMini(desc, names, text)
	.heading-mini
		span.head-line--desc= desc
		h2= names
		p= text

mixin post(link, src, headLine, name, text, date)
	.post-default
		.post-default--img
			a(href= link)
				img(src= src, alt="")
		.post-default--text
			span.head-line--post= headLine
			h4= name
			span.date-post= date
			p.max-text--big= text
			a(href= link).more-link
				| Continue reading
				svg(width="20" height="20" viewBox="0 0 20 20").icon-more
					use(xlink:href="img/icon-svg/sprite-icon.svg#icon-more")

mixin post2(link, src, headLine, name, text)
