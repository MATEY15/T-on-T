mixin careTablet(link, text)
	.home-care--tablet
		span.radio-icon
			img(src= link, alt= text)
		p.home-care--text
			=text
			br
			| care

//- Footer Menu
mixin footerMenu(links)
	ul
		for i in links
			li
				a(href=i.link)=i.name

//- Menu Mobile
mixin mobileMenu(links)
	ul
		for i in links
			li
				a(href=i.link)=i.name

//- Icon svg
mixin sprite(width, height, viewBox, names)
	svg(width=width height=height viewBox=viewBox class= names)
		use(xlink:href="img/icon-svg/sprite-icon.svg#"+names)

mixin categories(src, name, content)
	.categories-item
		a(href="#")
			img(src= src, alt="")
			.categories-item--text
				h4= name
				p= content
				svg(width="20" height="20" viewBox="0 0 20 20").icon-more
					use(xlink:href="img/icon-svg/sprite-icon.svg#icon-more")
