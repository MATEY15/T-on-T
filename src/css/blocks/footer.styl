.footer
	position absolute
	bottom 0
	left 0
	width 100%
	min-height 120px
	background #fff
	overflow hidden

.footer-top
	background: bglwhite
	padding-top 62px
	padding-bottom 60px
	@media screen and (max-width: 414px)
		padding-top 44px
		padding-bottom 46px

.flex--footer-top
	display flex
	flex-direction row
	@media screen and (max-width: 540px)
		justify-content center

.footer-menu
	display flex
	flex-direction row
	padding-top 18px
	@media screen and (max-width: 1024px)
		flex-grow 1
	@media screen and (max-width: 854px)
		flex-wrap wrap
	@media screen and (max-width: 540px)
		display none

.footer-menu--items
	@media screen and (max-width: 1024px)
		width 25% !important
	@media screen and (max-width: 854px)
		width 50% !important
	&:nth-last-child(-n+2)
		@media screen and (max-width: 854px)
			margin-top 30px
	h6
		letter-spacing: 0.1px;
		margin-bottom 26px
	ul
		li
			&:not(:last-child)
				margin-bottom 19px
		a
			ffR(16px)
			letter-spacing: 0.1px;
			c cfblack
			text-decoration none

.footer-info
	@media screen and (max-width: 540px)
		text-align center

.footer-logo
	margin-bottom 17px
	a
		display inline-block

.footer-contact
	ul
		li
			margin-bottom 19px
		a
			ffB(16px)
			c cfblack
			letter-spacing: 0.1px
			text-decoration none
			@media screen and (max-width: 540px)
				font-size 18px

.foot-description
	h6
		margin-bottom 22px
		letter-spacing: 0.1px
		@media screen and (max-width: 540px)
			font-size 18px
	p
		ffR(16px)
		c cfblack
		letter-spacing: 0.1px
		margin-bottom 10px
		line-height 22px
		@media screen and (max-width: 540px)
			font-size 18px
			line-height 26px
			letter-spacing: 0.11px
			margin-bottom 14px

.sicial-footer
	ul
		li
			display inline-block
			&:not(:last-child)
				margin-right 10px
			svg
				@media screen and (max-width: 540px)
					width 52px
					height 52px

.footer-bottom
	background: #fff
	@media screen and (max-width: 480px)
		padding-top 32px
		padding-bottom 80px

.flex--footer-bottom
	display flex
	flex-direction row
	align-items center
	justify-content space-between
	min-height 115px
	@media screen and (max-width: 720px)
		flex-direction column
		justify-content center
	@media screen and (max-width: 414px)
		padding-left 8px
		padding-right 8px

.copiright
	@media screen and (max-width: 720px)
		margin-bottom 20px
	p
		ffR(16px)
		c cfblack
		letter-spacing: 0.1px

.bottom-menu
	ul
		@media screen and (max-width: 720px)
			text-align center
		li
			display inline-block
			&:not(:last-child)
				margin-right 100px
				@media screen and (max-width: 1024px)
					margin-right 35px
				@media screen and (max-width: 854px)
					margin-right 20px
				@media screen and (max-width: 768px)
					margin-right 10px
				@media screen and (max-width: 540px)
					margin-right 28px
				@media screen and (max-width: 480px)
					margin 7px 14px

		a
			ffR(16px)
			c cfblack
			letter-spacing: 0.1px
			text-decoration none

.button-foot--mobile
	display none
	width 100%
	padding 20px 15px 15px
	text-align center
	background: #fff
	@media screen and (max-width: 480px)
		display block
		position fixed
		bottom 0
		left 0
		z-index 999
	.btn
		min-width 140px
		&:first-child
			margin-right 5px
		