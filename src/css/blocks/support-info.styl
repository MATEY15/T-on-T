.sectiom--support-info
	padding 40px 0 30px
	@media screen and (max-width: 540px)
		padding-top 20px

.support-info--content
	display flex
	flex-direction row
	padding-top 8px
	padding-bottom 54px
	max-width 970px
	margin 0 auto
	@media screen and (max-width: 768px)
		flex-direction column
		align-items center
	@media screen and (max-width: 480px)
		max-width 270px
		padding-bottom 26px
	
	.support-heading span
		@media screen and (max-width: 540px)
			display none

.support-info--img
	position relative
	max-width 435px
	width 100%
	height 290px
	overflow hidden
	brr(5px)
	@media screen and (max-width: 854px)
		max-width 380px
	@media screen and (max-width: 768px)
		max-width 435px
	@media screen and (max-width: 480px)
		max-width 270px
		height 182px
	img
		position absolute
		top 50%
		left 50%
		width 100%
		height auto
		tt(-50%, -50%)

.support-heading
	span
		display inline-block
		min-width: 135px
		height: 25px
		border-radius: 24px
		background-color: #e6f7f7
		padding 6px 14px
		c cdblue
		ffSB(12px)
		letter-spacing: 0.69px
		text-transform: uppercase
		margin-bottom 13px
	
	h3
		ffB(26px)
		c cfblack
		line-height: 30px
		margin-bottom 8px
		@media screen and (max-width: 480px)
			font-size 20px
			line-height: 23px

.support-info--text
	max-width 450px
	margin-left 50px
	display: flex
	flex-direction: column
	justify-content: center
	@media screen and (max-width: 768px)
		margin-left 0
		margin-top 35px
		text-align center
	.date-default
		display inline-block
		margin-bottom 15px
		@media screen and (max-width: 480px)
			font-size 10px
			letter-spacing: 0.21px
			line-height: 24px
	p
		ffR(16px)
		c cfblue
		letter-spacing: 0.34px
		line-height: 24px
		margin-bottom 20px
		@media screen and (max-width: 480px)
			font-size 14px
			letter-spacing: 0.3px
			line-height: 20px
			margin-bottom 17px
	
	.more-link
		@media screen and (max-width: 768px)
			justify-content center
		@media screen and (max-width: 480px)
			font-size 12px
		
		.icon-more
			@media screen and (max-width: 480px)
				width 14px
				height 14px