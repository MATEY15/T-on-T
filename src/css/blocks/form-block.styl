.form-block
	position relative
	display flex
	align-items center
	justify-content space-between
	max-width 975px
	min-height: 90px
	box-shadow: 0 2px 16px 2px rgba(0, 0, 0, 0.09)
	border-radius: 5px
	background-color: #ffffff
	padding 0 50px 0 60px
	@media screen and (max-width: 992px)
		padding: 0 30px 0 30px
	@media screen and (max-width: 640px)
		padding: 20px 30px 30px
		flex-direction column
	&.form-block--reverse
		@media screen and (max-width: 640px)
			flex-direction column-reverse
	&.form-block--offset
		margin 40px 0
	p
		ffSB(21px)
		c cfblack
		line-height: 30px
		@media screen and (max-width: 640px)
			margin-bottom 20px

.form-block--input
	position relative
	max-width: 535px
	width 100%
	height: 50px
	border-radius: 24px
	border: 2px solid #b2bac4
	margin-right 20px
	@media screen and (max-width: 992px)
		max-width 440px
	&.add-right--icon
		margin-right 0
		margin-left 20px
		button
			right -2px
		input
			padding 12px 184px 12px 26px
			@media screen and (max-width: 480px)
				padding: 12px 64px 12px 26px
	&.add-left--icon
		button
			left -2px
		input
			padding 12px 26px 12px 184px
			@media screen and (max-width: 480px)
				padding: 12px 26px 12px 64px
	button
		position absolute
		top -2px
		@media screen and (max-width: 480px)
			display flex
			align-items center
			justify-content center
			min-width 50px !important
			padding 0
		.icon-more
			display none
			width 30px
			height 30px
			fill #fff
			@media screen and (max-width: 480px)
				display block
		span
			@media screen and (max-width: 480px)
				display none
	
	input
		height: 46px
		width 100%
		border-radius: 24px
		ffR(16px)
		letter-spacing: 0.34px
		line-height: 24px
		c cfblue
		&::-webkit-input-placeholder
			ffR(16px)
			letter-spacing: 0.34px
			line-height: 24px
			c cfblue
		&::-moz-placeholder
			ffR(16px)
			letter-spacing: 0.34px
			line-height: 24px
			c cfblue
		&:-moz-placeholder
			ffR(16px)
			letter-spacing: 0.34px
			line-height: 24px
			c cfblue
		&:-ms-input-placeholder
			ffR(16px)
			letter-spacing: 0.34px
			line-height: 24px
			c cfblue