.wrapper--care-select
	@media screen and (max-width: 480px)
		padding 24px 0
	.container
		@media screen and (max-width: 480px)
			padding 0

.care-select
	position relative
	box-shadow: 0 2px 16px 2px rgba(0, 0, 0, 0.09)
	border-radius: 5px
	background-color: #ffffff
	padding 52px 24px 50px
	@media screen and (max-width: 480px)
		padding 28px 24px 16px
	
	.custom-close--link
		top -42px

.search-care
	max-width 535px
	margin 32px auto 50px
	@media screen and (max-width: 480px)
		margin 22px auto 36px
	.search-button--more
		display none
		@media screen and (max-width: 480px)
			display flex

.search-button--more
	svg
		width 30px
		height 30px
		fill #fff

.search-list
	max-width 1034px
	margin 0 auto
	display flex
	flex-direction row
	flex-wrap wrap
	@media screen and (max-width: 480px)
		margin-bottom 25px

.search-list--item
	width 33.3%
	overflow hidden
	@media screen and (max-width: 1024px)
		width 50%
		max-width 340px
		margin-bottom 30px
	@media screen and (max-width: 680px)
		width 100%
		max-width 100%
		overflow: inherit
	@media screen and (max-width: 480px)
		padding 0 26px
		box-shadow: 0 2px 16px 2px rgba(0, 0, 0, 0.09)
		border-radius: 5px
		background-color: #ffffff
		margin-bottom 11px
	h6
		position relative
		c cfblack
		margin-bottom 26px
		@media screen and (max-width: 480px)
			margin-bottom 0
		&.is-active
			&:before
				transform rotateX(180deg)
		&:before
			position: absolute
			right: 0
			top: 16px
			display: block
			content: ""
			height: 15px
			width: 26px
			background-image: url(../img/arrow-green.svg)
			background-repeat: no-repeat
			display none
			trn(.25s)
			@media screen and (max-width: 480px)
				display block
		@media screen and (max-width: 480px)
			display flex
			align-items center
			height: 50px
			// padding 0 26px
			// box-shadow: 0 2px 16px 2px rgba(0, 0, 0, 0.09)
			// border-radius: 5px
			// background-color: #ffffff

	
	ul
		display: flex
		flex-direction: column
		flex-wrap: wrap
		max-height: 375px
		@media screen and (max-width: 480px)
			display none
			max-height 100%
		li
			margin-bottom 20px
			width 50%
			@media screen and (max-width: 480px)
				width 100%
			a
				ffR(16px)
				c cfblack
				letter-spacing: 0.1px
				text-decoration none

.button--care-select
	max-width 1034px
	margin 18px auto 0
	@media screen and (max-width: 1024px)
		margin 0
	.btn
		margin 0 12px
		@media screen and (max-width: 480px)
			min-width 235px
			margin-bottom 10px