.section-content
	padding-top 35px
	padding-bottom 35px
	h3
		letter-spacing: -0.17px
		c cfblack
		margin-bottom 22px
		@media screen and (max-width: 540px)
			font-size 22px
			line-height 26px
			margin-bottom 20px
		span
			c cdblue
	p
		ffR(16px)
		c cfblue
		letter-spacing: 0.34px
		line-height: 27px
		margin-bottom 16px
		margin-bottom 20px
		@media screen and (max-width: 540px)
			font-size 14px
			line-height 20px
	a
		c #54bbbf
		text-decoration none
	
	ul
		margin-bottom 8px
		li
			position relative
			ffR(16px)
			c cfblue
			padding-left 32px
			letter-spacing: 0.1px
			line-height: 24px
			margin-bottom 15px
			&:before
				position absolute
				content ""
				display block
				width 12px
				height 12px
				top 5px
				left 0
				background: cdblue
				brr(50%)
	
	.section-content--btn
		padding-top 14px

.content-media
	overflow:hidden
	position:relative
	padding-bottom:56.25%
	padding-top:30px
	height:0
	@media screen and (max-width: 768px)
		margin 0 auto
	img,
	iframe
		position:absolute
		width:100%
		height:100%
		left:0
		top:0

.wrapper-column
	display flex
	flex-wrap wrap
	margin 0 -25px
	@media screen and (max-width: 1024px)
		margin 0 -15px
	[class*=column-]
		padding 0 25px
		@media screen and (max-width: 1024px)
			padding 0 15px
	.column-12
		width 100%
	.column-6
		width 50%
		@media screen and (max-width: 768px)
			width 100%
	.column-4
		width 33.3%
		@media screen and (max-width: 854px)
			width 50%
		@media screen and (max-width: 768px)
			width 100%
	
	.column-6
		@media screen and (max-width: 768px)
			order 2
	.column-6.media-col
		@media screen and (max-width: 768px)
			order 1
			margin-bottom 30px