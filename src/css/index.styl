@import ("../../libs/template/reset.css")
@import ("../../libs/template/lib")
@import ("../../libs/template/media")

@import ("libs/*.css")
@import ("fonts")
@import ("blocks/**/**")
@import ("_page/**/**")

*
	box-sizing border-box

html
	// background: cfblack

body
	position relative
	overflow-x: hidden
	min-width 320px
	background: #fff
	padding-top 65px
	c cfblack
	&.overflow
		overflow hidden

#overlayer
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	z-index 10
	background cfblack

.bg-blue
	background: #54bbbf

.align-right
	float right
.align-left
	float left

.post-section
	padding 35px 0

h1, h2, h3, h4, h5, h6
	font-family: fR
	color: cfblack

h1
	font-family: fSB
	font-size: 48px
	font-weight: 600
	line-height: 48px
h2
	font-family: fSB
	font-size: 44px
	font-weight: 600
	line-height: 49px
h3
	font-family: fB
	font-size: 36px
	font-weight: 700
	line-height: 49px
h4
	font-family: fB
	font-size: 23px
	font-weight: 700
	line-height: 30px
h5
	font-family: fB
	font-size 18px
h6
	font-family: fB
	font-size 16px

.container
	max-width 1272px
	width 100%
	padding-left 10px
	padding-right 10px
	margin 0 auto
	@media screen and (max-width: 1280px)
		padding-left 42px
		padding-right 42px
	@media screen and (max-width: 768px)
		padding-left 25px
		padding-right 25px

.container-footer
	max-width 1152px
	width 100%
	padding-left 10px
	padding-right 10px
	margin 0 auto
	@media screen and (max-width: 1024px)
		padding-left 42px
		padding-right 42px
	@media screen and (max-width: 768px)
		padding-left 25px
		padding-right 25px

.height-68
	height 68px

/* Delete */

.color-blocks
	display none
	position fixed
	bottom 0
	right 0
	background: #ccc
	z-index 1000
	padding 10px
	border 3px solid #333